<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="canchita-pu">
	  <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>com.canchita.models.Movie</class>
    <class>com.canchita.models.Genre</class>
    <class>com.canchita.models.User</class>
    <class>com.canchita.models.Schedule</class>
    <class>com.canchita.models.ScheduleItem</class>
    <class>com.canchita.models.Ticket</class>
    <class>com.canchita.models.AdminUser</class>
    <properties>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/canchita"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.password" value=""/>
      
      <!--<property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
      <property name="eclipselink.ddl-generation.output-mode" value="database"/>-->
      
      <property name="eclipselink.logging.level" value="FINE"/>
    </properties>
	</persistence-unit>
</persistence>
